<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="fr.esiee.easytrainfx.AjoutArretController"
          xmlns:fx="http://javafx.com/fxml/1" hgap="10" vgap="10">
    <Label text="Nom de l'arrêt" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="tfNomArret" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Type d'arrêt" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <ComboBox fx:id="cbTypeArret" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Button text="Ajouter" onAction="#onAddButtonClick" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Button text="Réinitialiser" onAction="#onResetButtonClick" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <Label fx:id="lblMessage" GridPane.rowIndex="5" GridPane.columnIndex="1" />
</GridPane>
